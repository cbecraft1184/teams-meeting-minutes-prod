{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.20/MicrosoftTeams.schema.json",
  "manifestVersion": "1.20",
  "version": "1.0.0",
  "id": "{{TEAMS_APP_ID}}",
  "packageName": "com.yourcompany.teamsminutes",
  "developer": {
    "name": "Your Company Name",
    "websiteUrl": "https://yourcompany.com",
    "privacyUrl": "https://yourcompany.com/privacy",
    "termsOfUseUrl": "https://yourcompany.com/terms"
  },
  "name": {
    "short": "Meeting Minutes",
    "full": "AI-Powered Meeting Minutes for Microsoft Teams"
  },
  "description": {
    "short": "Automatically generate AI-powered meeting minutes from Teams meetings",
    "full": "Automatically capture Teams meetings, generate AI-powered meeting minutes using Azure OpenAI, manage approval workflow, and archive approved minutes to SharePoint. Designed for 20-user demo pilots with Commercial and NAVY ERP environments."
  },
  "icons": {
    "outline": "icons/outline.png",
    "color": "icons/color.png"
  },
  "accentColor": "#4464EE",
  "staticTabs": [
    {
      "entityId": "dashboard",
      "name": "Dashboard",
      "contentUrl": "{{TAB_ENDPOINT}}/",
      "websiteUrl": "{{TAB_ENDPOINT}}/",
      "scopes": ["personal"]
    },
    {
      "entityId": "meetings",
      "name": "Meetings",
      "contentUrl": "{{TAB_ENDPOINT}}/meetings",
      "websiteUrl": "{{TAB_ENDPOINT}}/meetings",
      "scopes": ["personal"]
    },
    {
      "entityId": "archive",
      "name": "Archive",
      "contentUrl": "{{TAB_ENDPOINT}}/archive",
      "websiteUrl": "{{TAB_ENDPOINT}}/archive",
      "scopes": ["personal"]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "webApplicationInfo": {
    "id": "{{AZURE_AD_APP_ID}}",
    "resource": "api://{{TAB_DOMAIN}}/{{AZURE_AD_APP_ID}}"
  },
  "validDomains": [
    "{{TAB_DOMAIN}}",
    "token.botframework.com"
  ]
}
